    <script>
        const messages = [
            "Aún tengo mucho que aprender sobre el amor, pero quiero aprenderlo contigo, aún tengo muchos defectos por corregir, pero quiero corregirlos por nosotros dos, aún no alcanzo mi mejor versión, pero quiero que seas tú quien la disfrute, aún quedan muchas cosas por vivir, y quiero vivirlas contigo.",
            "",
            "TE AMO.",
            "",
            "Te amo de la forma más sincera que puedo decirte.",
            "Te amo de la manera en la que nunca había amado.",
            "Amo tus risas, tus miradas, tus besos.",
            "Te amo hasta en esos momentos en los que no quieres estar con nadie.",
            "Te amo... Hoy, mañana y siempre."
        ];

        const carouselInner = document.getElementById('carouselInner');
        const carouselItems = document.querySelectorAll('.carousel-item');
        const loveMessage = document.getElementById('loveMessage');
        const container = document.querySelector('.container');
        let currentPhotoIndex = 0;
        let currentMessageIndex = 0;
        let charIndex = 0;
        let isTyping = false;
        
        document.addEventListener('DOMContentLoaded', () => {
            setTimeout(() => {
                container.classList.add('show');
                setTimeout(showNextPhoto, 1500);
                setTimeout(startTypingMessage, 2000);
                createHearts();
            }, 500);
        });

        function showNextPhoto() {
            // Elimina la clase 'active' de la imagen actual
            carouselItems[currentPhotoIndex].classList.remove('active');
            
            // Avanza al siguiente índice, con un bucle infinito
            currentPhotoIndex = (currentPhotoIndex + 1) % carouselItems.length;
            
            // Añade la clase 'active' a la siguiente imagen
            carouselItems[currentPhotoIndex].classList.add('active');

            // Llama a la función de nuevo después de 3 segundos
            setTimeout(showNextPhoto, 3000); 
        }

        function startTypingMessage() {
            if (!isTyping) {
                isTyping = true;
                typeMessage();
            }
        }

        function typeMessage() {
            if (currentMessageIndex < messages.length) {
                const fullMessage = messages[currentMessageIndex];
                if (charIndex < fullMessage.length) {
                    loveMessage.textContent += fullMessage.charAt(charIndex);
                    charIndex++;
                    setTimeout(typeMessage, 70);
                } else {
                    loveMessage.textContent += '\n\n';
                    charIndex = 0;
                    currentMessageIndex++;
                    setTimeout(typeMessage, 1500);
                }
            } else {
                isTyping = false;
                loveMessage.classList.add('show');
            }
        }

        function createHearts() {
            for (let i = 0; i < 20; i++) {
                const heart = document.createElement('div');
                heart.classList.add('heart');
                document.body.appendChild(heart);

                const size = Math.random() * 30 + 10;
                heart.style.width = `${size}px`;
                heart.style.height = `${size}px`;
                
                heart.style.left = `${Math.random() * 100}vw`;
                heart.style.top = `${Math.random() * 100}vh`;

                heart.style.animationDelay = `${Math.random() * 5}s`;
                heart.style.animationDuration = `${Math.random() * 3 + 2}s`;
                
                setTimeout(() => {
                    heart.style.opacity = 1;
                }, 100);
            }
        }
    </script>
</body>
